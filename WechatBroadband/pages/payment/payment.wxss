
.payment-header-bg{
  background: #ffffff;
}
.payment-total-bg{
  border-top: 10px solid #ededed;
  height: 120px;
  width: 100%;
  background: #ffffff;
}
.payment-total{
  border-top: 15px solid #ededed;
  width: 100%;
  font-size: 40px;
  height: 126px;
  display: flex;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
}
.payment-sepline{
  height: 1px;
  margin-left: 10px;
  margin-right: 10px;
  background: #ededed;
}
.list-headerfooter{
  height: 10px;
  width: 100%;
}
.list-item-bg{
  padding: 5px 10px 5px 10px;
  display: flex;
  justify-content: space-between;
}
.list-item-leftText{
  font-size: 16px;
}
.list-item-rightText{
  font-size: 17px;
  max-width: 65%;
}
.payment-tip{
  font-size: 14px;
  color: gray;
  padding: 8px 10px 8px 10px;
  width: 100%;
}
.payment-footer-bg{
  background: #ffffff;
}
.input-item-bg{
  padding: 5px 10px 5px 10px;
  display: flex;
  height: 40px;
  justify-content: space-between;
  align-items: center;
}
.input-item-sepline{
  height: 1px;
  margin-left: 10px;
  background: #ededed;
}
.payment-input{
  width: 75%;
}
.buttonContainer{
  padding: 20px 20px 20px 20px;
}